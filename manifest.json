{
  "manifest_version": 3,
  "name": "Shift Validator",
  "version": "1.0",
  "description": "Validates shift data on the current page using your provided script.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
